{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": ".",
        "rootDir": ".",
        "types": [
            "chrome"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "include": [
        "*.ts",
        "*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}